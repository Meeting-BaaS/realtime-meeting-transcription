{
  "name": "meetingbaas-transcription",
  "version": "1.0.0",
  "description": "WebSocket transcription system for MeetingBaas using Gladia",
  "main": "dist/index.js",
  "scripts": {
    "rebuild:speaker": "cd node_modules/.pnpm/speaker@0.5.5/node_modules/speaker && npx node-gyp rebuild 2>&1 | tail -3 || true",
    "postinstall": "pnpm run rebuild:speaker",
    "build": "tsup src/index.ts --dts",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts --remote",
    "dev:local": "ts-node src/index.ts --local 2>/dev/null",
    "dev:remote": "ts-node src/index.ts --remote 2>/dev/null",
    "dev:compare": "ts-node src/index.ts --compare 2>/dev/null",
    "clean": "rm -rf node_modules && pnpm install"
  },
  "keywords": [
    "transcription",
    "meetingbaas",
    "gladia",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@meeting-baas/sdk": "^5.0.5",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.4",
    "axios": "^1.3.6",
    "dotenv": "^16.0.3",
    "speaker": "^0.5.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "node-gyp": "^12.1.0",
    "tsup": "^6.7.0"
  }
}
