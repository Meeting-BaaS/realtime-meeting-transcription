# Additional Transcription Provider API Keys
# Configure multiple providers for load balancing or fallback support
# At least one provider API key is required in your .env file

# Gladia (supports streaming)
GLADIA_API_KEY=your_gladia_api_key

# Deepgram (supports streaming)
DEEPGRAM_API_KEY=your_deepgram_api_key

# AssemblyAI (supports streaming)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Azure Speech-to-Text (batch only, requires region)
AZURE_API_KEY=your_azure_api_key
AZURE_REGION=eastus

# OpenAI Whisper (batch only)
OPENAI_API_KEY=your_openai_api_key

# Speechmatics (batch only)
SPEECHMATICS_API_KEY=your_speechmatics_api_key

# Transcription Provider Configuration
# Default provider to use when not explicitly specified
# Options: gladia, deepgram, assemblyai, azure-stt, openai-whisper, speechmatics
TRANSCRIPTION_PROVIDER=gladia

# Provider selection strategy
# Options:
#   - default: Use TRANSCRIPTION_PROVIDER if not specified in request
#   - explicit: Always require provider to be specified (throws error if not)
#   - round-robin: Automatically rotate between configured providers for load balancing
PROVIDER_STRATEGY=default

# Proxy Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=3000

# Audio Recording Configuration (optional)
# Enable audio recording to save meeting audio to WAV files
ENABLE_AUDIO_RECORDING=false
# Directory where audio recordings will be saved
AUDIO_OUTPUT_DIR=./recordings

# Transcript Logging Configuration
# Enable transcript logging to save transcripts to files (enabled by default)
# Set to false to disable
ENABLE_TRANSCRIPT_LOGGING=true
# Base directory where transcript sessions will be saved
# Each session creates a folder: TRANSCRIPT_OUTPUT_DIR/sessions/YYYYMMDD_HHMMSS_uuid/
TRANSCRIPT_OUTPUT_DIR=./transcripts

# MeetingBaas API URL (optional)
# For production (default): https://api.meetingbaas.com
# For pre-production: https://api.pre-prod-meetingbaas.com
MEETING_BAAS_API_URL=https://api.meetingbaas.com

# MeetingBaas Webhook URL (optional)
# HTTP/HTTPS endpoint where MeetingBaas will send webhook events
# If not set, no webhook URL will be configured
# Example: MEETING_BAAS_WEBHOOK_URL=https://your-domain.com/webhook
MEETING_BAAS_WEBHOOK_URL=

# Webhook Server Configuration (for receiving transcription webhooks)
# Enable webhook server to receive notifications from transcription providers
ENABLE_WEBHOOKS=false

# Webhook server host and port
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=5050

# Webhook endpoint path
WEBHOOK_PATH=/webhooks/transcription

# Webhook secret for signature verification (recommended for production)
# Leave empty to disable signature verification
WEBHOOK_SECRET=your_webhook_secret
